{
  "name": "jimmfly-resume",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "A modern, interactive AI native resume website with parallax scrolling effects and 3D elements",
  "author": {
    "name": "杨晋飞 (JimmFly)",
    "email": "yangjinfei001@gmail.com",
    "url": "https://github.com/JimmFly"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JimmFly/resume.git"
  },
  "homepage": "https://jimmfly.github.io/resume/",
  "keywords": [
    "resume",
    "portfolio",
    "react",
    "typescript",
    "vite",
    "tailwindcss",
    "framer-motion",
    "three.js",
    "parallax"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "oxlint": "oxlint src",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "analyze": "npx vite-bundle-analyzer",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@react-three/drei": "^10.6.1",
    "@react-three/fiber": "^9.3.0",
    "@types/three": "^0.178.1",
    "framer-motion": "^12.23.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.178.0",
    "three-globe": "^2.43.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "10.4.15",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.8.0",
    "postcss": "8.4.31",
    "prettier": "^3.6.2",
    "tailwindcss": "3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.43.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  },
  "packageManager": "yarn@4.9.2",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxlint",
      "eslint --fix",
      "tsc --noEmit"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
